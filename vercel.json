{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "rewrites": [
    { "source": "/data/(.*)", "destination": "/data/$1" },
    { "source": "/(.+\\.(json|svg|jpg|png|ico|woff|woff2|webmanifest|xml|txt))", "destination": "/$1" },
    { "source": "/debug", "destination": "/index.html" },
    { "source": "/dashboard", "destination": "/index.html" },
    { "source": "/process-flow", "destination": "/index.html" },
    { "source": "/lot-analytics", "destination": "/index.html" },
    { "source": "/visualizations", "destination": "/index.html" },
    { "source": "/intelligence", "destination": "/index.html" },
    { "source": "/insights", "destination": "/index.html" },
    { "source": "/customer-comments", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=60"
        }
      ]
    }
  ],
  "env": {
    "REACT_APP_ENTRY_POINT": "./src/debug-index.js",
    "REACT_APP_API_URL": "https://api.your-domain.vercel.app",
    "REACT_APP_ENV": "production"
  }
} 