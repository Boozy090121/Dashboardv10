{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/data/(.*)", "dest": "/data/$1" },
    { "src": "/(.*\\.(json|svg|jpg|png|ico|woff|woff2|webmanifest|xml|txt))", "dest": "/$1" },
    { "src": "/debug", "dest": "/index.html" },
    { "src": "/dashboard", "dest": "/index.html" },
    { "src": "/process-flow", "dest": "/index.html" },
    { "src": "/lot-analytics", "dest": "/index.html" },
    { "src": "/visualizations", "dest": "/index.html" },
    { "src": "/intelligence", "dest": "/index.html" },
    { "src": "/insights", "dest": "/index.html" },
    { "src": "/customer-comments", "dest": "/index.html" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_ENTRY_POINT": "./src/debug-index.js",
    "REACT_APP_API_URL": "https://api.your-domain.vercel.app",
    "REACT_APP_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=60"
        }
      ]
    }
  ]
} 